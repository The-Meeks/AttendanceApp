<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinnerDept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_department"
        android:minHeight="48dp"/>

    <Spinner
        android:id="@+id/spinnerCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_course"
        android:minHeight="48dp"/>

    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_year"
        android:minHeight="48dp"/>

    <Spinner
        android:id="@+id/spinnerSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_semester"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/btnPromoteCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promote Course" />

</LinearLayout>
