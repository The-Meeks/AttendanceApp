<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Admin"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnRegisterStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Students"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnRegisterLecturers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Lecturers"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnRegisterUnits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Units"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnViewAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Attendance"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnRemoveUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Users"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="#e74c3c"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
