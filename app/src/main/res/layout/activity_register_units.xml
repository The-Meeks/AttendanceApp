<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_unit_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etUnitCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unit_code_hint"
            android:inputType="textCapCharacters"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etUnitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unit_name_hint"
            android:inputType="textCapWords"
            android:layout_marginTop="12dp"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spinnerUnitDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:prompt="@string/select_department"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spinnerYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:prompt="@string/select_year"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spinnerSemester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:prompt="@string/select_semester"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnRegisterUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_unit_button"
            android:backgroundTint="#2980b9"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
