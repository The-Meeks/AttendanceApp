<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Unit"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/etUnitCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unit Code"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/etUnitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unit Name"
        android:minHeight="48dp"/>

    <Spinner
        android:id="@+id/spinnerUnitDept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/prompt_select_department"
        android:layout_marginTop="12dp"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/btnRegisterUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Unit"
        android:layout_marginTop="24dp" />
</LinearLayout>
