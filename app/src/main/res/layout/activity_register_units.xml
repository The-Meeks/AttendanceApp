<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_unit_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etUnitCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unit_code_hint"
            android:inputType="textCapCharacters"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etUnitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unit_name_hint"
            android:inputType="textCapWords"
            android:layout_marginTop="12dp"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spinnerUnitDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:prompt="@string/select_department"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spinnerYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:prompt="@string/select_year"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spinnerSemester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:prompt="@string/select_semester"
            android:minHeight="48dp" />

        <!-- Day of Week -->
        <Spinner
            android:id="@+id/spinnerDayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:prompt="@string/select_day_of_week"
            android:minHeight="48dp" />

        <!-- Allocated time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allocated Time"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Start time (e.g., 11:00 AM)"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:minHeight="48dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  -  "
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/etEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="End time (e.g., 1:00 PM)"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:minHeight="48dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnRegisterUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_unit_button"
            android:backgroundTint="#2980b9"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
