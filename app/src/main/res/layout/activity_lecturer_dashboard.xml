<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main content container -->
    <LinearLayout
        android:id="@+id/contentMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F6FA">

    <!-- Toolbar like Admin -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_header"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Lecturer Dashboard" />

    <!-- Welcome line -->
    <TextView
        android:id="@+id/tvWelcomeLecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Welcome, Lecturer"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"/>

    <!-- Content scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Today's Classes Header -->
            <TextView
                android:id="@+id/tvTodayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Classes"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTodayClasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <!-- Attendance Alert Header with badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvAlertsHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Attendance Alert"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/tvAlertsBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Consecutive Absences"
                    android:textColor="#E74C3C"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Alerts Panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_alert_panel"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Action Required"
                        android:textStyle="bold"
                        android:textColor="#E74C3C"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textStyle="bold"
                        android:textColor="#2980B9"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAlerts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Primary Action: Create QR Code -->
            <TextView
                android:id="@+id/btnCreateQR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_qr_code"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="Create QR Code"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_primary_button"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp" />

            <!-- Secondary Action: View Attendance Reports -->
            <TextView
                android:id="@+id/btnViewAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_attendance"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="View Attendance Reports"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2980B9"
                android:background="@drawable/bg_secondary_button" />

            <!-- Optional: Units quick link -->
            <TextView
                android:id="@+id/btnViewUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="Units"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginTop="12dp"/>

            <!-- Optional: Logout -->
            <TextView
                android:id="@+id/btnLogoutLecturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="Logout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E74C3C"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer (Material) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_lecturer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_drawer_lecturer"
        app:headerLayout="@layout/nav_header_lecturer" />

</androidx.drawerlayout.widget.DrawerLayout>
