<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_header"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvLecturerHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturer_dashboard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <!-- ðŸ”¹ Dynamic Welcome Text -->
        <TextView
            android:id="@+id/tvWelcomeLecturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_lecturer"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Dashboard list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="34dp">

        <!-- Create QR -->
        <TextView
            android:id="@+id/btnCreateQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_qr_code"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/create_qr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button"
            android:layout_marginBottom="12dp" />

        <!-- Attendance -->
        <TextView
            android:id="@+id/btnViewAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_attendance"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/attendance"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button"
            android:layout_marginBottom="12dp" />

        <!-- Units -->
        <TextView
            android:id="@+id/btnViewUnits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_units"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/units"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button"
            android:layout_marginBottom="12dp" />

        <!-- Logout -->
        <TextView
            android:id="@+id/btnLogoutLecturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_logout"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/logout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark" />

    </LinearLayout>
</LinearLayout>
